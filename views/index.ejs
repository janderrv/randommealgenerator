<%- include partials/head.ejs %>
<%- include partials/navbar.ejs %>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card mb-3 text-center">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img id="thumbmeal" src="<%= meal.strMealThumb %>" class="card-img" alt="<%= meal.strMeal %>">
                <h5 class="card-title mt-3"><b>Ingredients:</b></h5>
                <ul class="list-group list-group-flush">
                    <%    ingredients.forEach((item) => { %>
                    <% if(item != ""){ %>
                        <li class="list-group-item"><%= item %></li>
                    <%  } %>
                    <% }); %>
                </ul>
            </div>
            <div class="col-md-8 text-center">
                <div class="card-body">
                    <h5 class="card-title"><b><%= meal.strMeal %></b></h5>
                    <p class="card-text"><%= meal.strInstructions %></p>
                    <p class="card-text">
                        <iframe src="<%= youtube %>" width="500" height="350"></iframe>
                    </p>
                    <a class="btn btn-success" href="/" role="button">New Meal</a>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include partials/footer.ejs %>